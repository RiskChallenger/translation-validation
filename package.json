{
  "name": "translation-validation",
  "version": "0.0.0-development",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "commit": "git-cz",
    "release:first": "npm run release -- --first-release",
    "deploy": "ng deploy",
    "copy": "cp -r README.md dist/ngx-translation-validation",
    "build:lib": "ng build ngx-translation-validation --configuration=production && npm run copy",
    "test:lib": "ng test ngx-translation-validation",
    "release": "cd projects/ngx-translation-validation && standard-version --infile ../../CHANGELOG.md",
    "test:lib:headless": "cross-env CI=true npm run test:lib",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "i18n:extract": "transloco-keys-manager extract",
    "i18n:find": "transloco-keys-manager find"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.2.11",
    "@angular/common": "12.2.11",
    "@angular/compiler": "12.2.11",
    "@angular/core": "12.2.11",
    "@angular/forms": "12.2.11",
    "@angular/platform-browser": "12.2.11",
    "@angular/platform-browser-dynamic": "12.2.11",
    "@angular/router": "12.2.11",
    "@ngneat/lib": "3.0.0",
    "@ngneat/transloco": "3.0.6",
    "rxjs": "6.6.7",
    "tslib": "2.3.1",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.11",
    "@angular/cli": "12.2.11",
    "@angular/compiler-cli": "12.2.11",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-angular": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@ngneat/spectator": "8.0.1",
    "@ngneat/transloco-keys-manager": "3.0.2",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/jasmine": "3.10.0",
    "@types/node": "14.17.27",
    "all-contributors-cli": "6.20.0",
    "angular-cli-ghpages": "1.0.0-rc.2",
    "codelyzer": "6.0.2",
    "cross-env": "7.0.3",
    "git-cz": "4.8.0",
    "husky": "7.0.4",
    "jasmine-core": "3.10.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.5",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "lint-staged": "11.2.3",
    "ng-packagr": "12.2.4",
    "ngx-build-plus": "12.2.0",
    "prettier": "2.4.1",
    "protractor": "7.0.0",
    "semantic-release": "18.0.1",
    "standard-version": "9.3.2",
    "ts-node": "10.3.0",
    "tslint": "6.1.3",
    "typescript": "4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RiskChallenger/translation-validation.git"
  }
}
