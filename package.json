{
  "name": "translation-validation",
  "version": "0.0.0-development",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "commit": "git-cz",
    "release:first": "npm run release -- --first-release",
    "deploy": "ng deploy",
    "copy": "cp -r README.md dist/ngx-translation-validation",
    "test:app": "ng test translation-validation",
    "test:app:headless": "cross-env CI=true npm run test:app -- --no-watch --no-progress",
    "build:lib": "ng build ngx-translation-validation --configuration=production && npm run copy",
    "test:lib": "ng test ngx-translation-validation",
    "test:lib:headless": "cross-env CI=true npm run test:lib -- --no-watch --no-progress",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "i18n:extract": "transloco-keys-manager extract",
    "i18n:find": "transloco-keys-manager find"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.0.3",
    "@angular/common": "20.0.3",
    "@angular/compiler": "20.0.3",
    "@angular/core": "20.0.3",
    "@angular/forms": "20.0.3",
    "@angular/platform-browser": "20.0.3",
    "@angular/platform-browser-dynamic": "20.0.3",
    "@angular/router": "20.0.3",
    "@jsverse/transloco": "7.6.1",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.0.2",
    "@angular-devkit/core": "20.0.2",
    "@angular-devkit/schematics": "20.0.2",
    "@angular-eslint/builder": "20.1.0",
    "@angular-eslint/eslint-plugin": "20.1.0",
    "@angular-eslint/eslint-plugin-template": "20.1.0",
    "@angular-eslint/schematics": "20.1.0",
    "@angular-eslint/template-parser": "20.1.0",
    "@angular/cli": "20.0.2",
    "@angular/compiler-cli": "20.0.3",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-angular": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@jsverse/transloco-keys-manager": "6.1.0",
    "@ngneat/spectator": "19.6.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/jasmine": "5.1.8",
    "@types/node": "20.19.1",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "@typescript-eslint/types": "8.34.1",
    "@typescript-eslint/utils": "8.34.1",
    "angular-cli-ghpages": "2.0.3",
    "cross-env": "7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "git-cz": "4.9.0",
    "husky": "9.1.7",
    "jasmine-core": "5.8.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "lint-staged": "16.1.2",
    "ng-packagr": "20.0.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "semantic-release": "24.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RiskChallenger/translation-validation.git"
  },
  "packageManager": "yarn@4.9.2"
}
